<?xml version="1.0" encoding="utf-8" ?>
<telerik:RadContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:telerik="clr-namespace:Telerik.Maui.Controls;assembly=Telerik.Maui.Controls"
                        xmlns:telerikInput="clr-namespace:Telerik.XamarinForms.Input;assembly=Telerik.Maui.Controls.Compatibility"
                        x:Class="SDKBrowserMaui.Examples.EntryControl.GettingStartedCategory.GettingStartedExample.EntryGettingStarted"
                        Margin="5">
    <telerik:RadContentView.Content>
        <Grid RowDefinitions="Auto">
            <!-- >> entry-getting-started-xaml -->
            <telerikInput:RadEntry x:Name="EntryShareName"
                                   FontSize="14"
                                   WatermarkText="Enter text here"
                                   WatermarkTextColor="#99000000">
                <telerikInput:RadEntry.BorderStyle>
                    <telerikInput:BorderStyle BorderThickness="0, 0, 0, 1"
                                              BorderColor="#DFDFDF" />
                </telerikInput:RadEntry.BorderStyle>
            </telerikInput:RadEntry>
            <!-- << entry-getting-started-xaml -->
        </Grid>
    </telerik:RadContentView.Content>
</telerik:RadContentView>