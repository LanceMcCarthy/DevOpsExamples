<?xml version="1.0" encoding="utf-8" ?>
<telerik:RadContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:telerik="clr-namespace:Telerik.Maui.Controls;assembly=Telerik.Maui.Controls"
                        x:Class="SDKBrowserMaui.Examples.MaskedEntryControl.FeaturesCategory.AllowNullValuesExample.AllowNullValues"
                        Margin="5">
    <telerik:RadContentView.Content>
        <ScrollView>
            <VerticalStackLayout>

                <Label Text="Text mask with AllowNullValues = false" Margin="0, 30, 0, 0" />
                <telerik:RadNumericMaskedEntry x:Name="textMaskedEntry"  Value="5" AllowNullValue="False" />
                <Button Text="Value = null" Clicked="TextMaskValueToNull_Clicked" HorizontalOptions="Center"  Margin="0,5,0,0"/>

                <Label Text="Text mask with AllowNullValues = true" Margin="0, 30, 0, 0" />
                <telerik:RadNumericMaskedEntry x:Name="allowNullValuesTextMaskedEntry" Value="5"  AllowNullValue="True"/>

                <Button Text="Value = null" Clicked="AllowNullValuesValueToNull_Clicked" HorizontalOptions="Center" Margin="0,5,0,0"/>

            </VerticalStackLayout>
        </ScrollView>
    </telerik:RadContentView.Content>
</telerik:RadContentView>