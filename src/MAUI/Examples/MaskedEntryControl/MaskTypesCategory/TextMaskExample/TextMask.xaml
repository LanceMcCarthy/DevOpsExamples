<?xml version="1.0" encoding="utf-8" ?>
<telerik:RadContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:telerik="clr-namespace:Telerik.Maui.Controls;assembly=Telerik.Maui.Controls"
                        x:Class="SDKBrowserMaui.Examples.MaskedEntryControl.MaskTypesCategory.TextMaskExample.TextMask"
                        Margin="5">
    <telerik:RadContentView.Content>
        <ScrollView>
            <VerticalStackLayout>

                <Label Text="Numbers only Text Mask" Margin="0, 10, 0, 0" />
                <telerik:RadTextMaskedEntry Mask="(000) 000-000" PromptChar=" "/>

                <Label Text="Letters only Text Mask" Margin="0, 10, 0, 0"  />
                <telerik:RadTextMaskedEntry Mask="LLLLL"/>

            </VerticalStackLayout>
        </ScrollView>
    </telerik:RadContentView.Content>
</telerik:RadContentView>