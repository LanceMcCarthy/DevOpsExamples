<?xml version="1.0" encoding="utf-8" ?>
<telerik:RadContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:telerik="clr-namespace:Telerik.Maui.Controls;assembly=Telerik.Maui.Controls"
                        x:Class="SDKBrowserMaui.Examples.BorderControl.FeaturesCategory.KeyFeaturesExample.KeyFeatures"
                        Margin="5">
    <telerik:RadContentView.Content>
        <VerticalStackLayout HorizontalOptions="CenterAndExpand">
            <Label Text="Setting BorderColor and BorderThickness" />
            <!-- >> border-features-thickness -->
            <telerik:RadBorder BorderColor="#4488F6" BorderThickness="1, 2, 1, 2">
                <Label Text="Hello there" Margin="2" />
            </telerik:RadBorder>
            <!-- << border-features-thickness -->
            <Label Text="Defining Different Corners" />
            <!-- >> border-features-cornerradius -->
            <telerik:RadBorder BorderColor="#4488F6" 
                               BorderThickness="1" 
                               CornerRadius="15, 5, 15, 5">
                <Label Text="Hello there" Margin="2" />
            </telerik:RadBorder>
            <!-- << border-features-cornerradius -->
            <Label Text="Creating Circular Image" />
            <Grid>
                <!-- >> border-features-circularimage -->
                <telerik:RadBorder CornerRadius="30"
                                   BorderThickness="5" 
                                   BorderColor="#4488F6"
                                   HorizontalOptions="Start">
                    <Image Source="dot_net.svg" 
                           WidthRequest="50" 
                           HeightRequest="50" 
                           BackgroundColor="#512BD4"/>
                </telerik:RadBorder>
                <!-- << border-features-circularimage -->
            </Grid>            
        </VerticalStackLayout>
    </telerik:RadContentView.Content>
</telerik:RadContentView>