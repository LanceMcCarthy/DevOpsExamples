<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="MauiDemo.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:MauiDemo"
       xmlns:views="clr-namespace:MauiDemo.Views"
       Shell.FlyoutBehavior="Flyout"
       Shell.FlyoutIsPresented="True">

    <ShellContent Title="Home"
                  ContentTemplate="{DataTemplate views:MainPage}"
                  Route="MainPage" />

    <ShellContent Title="DataForm"
                  ContentTemplate="{DataTemplate views:DataFormPage}"
                  Route="DataFormPage" />

    <ShellContent Title="Scheduler"
                  ContentTemplate="{DataTemplate views:SchedulerPage}"
                  Route="SchedulerPage" />

    <ShellContent Title="SignPad"
                  ContentTemplate="{DataTemplate views:SignaturePadPage}"
                  Route="SignaturePadPage" />

</Shell>
