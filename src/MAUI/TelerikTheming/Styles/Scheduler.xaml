                <RadioButton x:Name="PART_OccurrenceChoice"
                             Content="{telerik:Localize Scheduler_DeleteRecurrenceChoiceDialog_Delete_Occurrence}"
                             IsChecked="True"
                             Style="{StaticResource SchedulerDialogRadioButtonStyle_Desktop}"
                             GroupName="RecurrenceModeChoice" />
                <RadioButton Grid.Row="1"
                             Content="{telerik:Localize Scheduler_DeleteRecurrenceChoiceDialog_Delete_Series}"
                             Style="{StaticResource SchedulerDialogRadioButtonStyle_Desktop}"
                             GroupName="RecurrenceModeChoice" />
            </Grid>
            <Grid Grid.Row="3"
                  ColumnDefinitions="*, *"
                  ColumnSpacing="8"
                  Padding="8"
                  BackgroundColor="{DynamicResource RadAppSurfaceColor}">
                <telerik:RadButton Text="{telerik:Localize Scheduler_DeleteRecurrenceChoiceDialog_Cancel}"
                                   Command="{Binding CancelCommand}" />
                <telerik:RadButton Grid.Column="1"
                                   Text="{telerik:Localize Scheduler_DeleteRecurrenceChoiceDialog_Delete}"
                                   IsEnabled="{Binding IsReadOnly, Converter={StaticResource SchedulerInvertedBooleanConverter}}"
                                   Command="{Binding DeleteCommand}"
                                   CommandParameter="{Binding Source={x:Reference PART_OccurrenceChoice}, Path=IsChecked}"
                                   Style="{DynamicResource RadPrimaryButtonStyle}" />
            </Grid>
            <telerik:SchedulerBoxView Grid.Row="3"
                                      Style="{DynamicResource SchedulerDialogSeparatorStyle_Desktop}"
                                      VerticalOptions="Start" />
        </Grid>
    </ControlTemplate>
    <Style x:Key="SchedulerDeleteRecurrenceChoiceDialogStyle_Desktop" TargetType="telerik:SchedulerDialog" BasedOn="{StaticResource SchedulerDialogBaseStyle_Desktop}">
        <Setter Property="ControlTemplate" Value="{StaticResource SchedulerDeleteRecurrenceChoiceDialogTemplate_Desktop}" />
    </Style>

    <ControlTemplate x:Key="RadSchedulerControlTemplate_Desktop">
        <Grid RowDefinitions="Auto, *">
            <telerik:RadBorder Style="{TemplateBinding ActualHeaderBorderStyle}">
                <Grid ColumnDefinitions="Auto, *"
                      ColumnSpacing="12">
                    <HorizontalStackLayout Spacing="{OnPlatform MacCatalyst=4}">
                        <Button Style="{TemplateBinding ActualTodayButtonStyle}"
                                IsVisible="{TemplateBinding IsTodayButtonVisible}"
                                Command="{TemplateBinding TodayCommand}" />
                        <Label Style="{TemplateBinding ActualHeaderLabelStyle}" />
                        <telerikScheduler:SchedulerNavigationButton Style="{TemplateBinding ActualDecreaseVisibleRangeButtonStyle}"
                                                                    Command="{TemplateBinding DecreaseVisibleRangeCommand}" />
                        <telerikScheduler:SchedulerDatePicker x:Name="PART_DatePicker" />
                        <telerikScheduler:SchedulerNavigationButton Style="{TemplateBinding ActualIncreaseVisibleRangeButtonStyle}"
                                                                    Command="{TemplateBinding IncreaseVisibleRangeCommand}" />
                    </HorizontalStackLayout>
                    <telerik:NonVirtualizedItemsControl Grid.Column="1"
                                                        ItemsSource="{TemplateBinding ViewDefinitions}"
                                                        DisplayMemberPath="Title"
                                                        ItemStyle="{TemplateBinding ActualViewDefinitionHeaderItemStyle}"
                                                        SelectedItemStyle="{TemplateBinding ActualActiveViewDefinitionHeaderItemStyle}"
                                                        SelectionMode="Single"
                                                        Orientation="Horizontal"
                                                        CanUnselectSingleItem="False"
                                                        SelectedItem="{Binding ActiveViewDefinition, Source={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                                        HorizontalOptions="End" />
                </Grid>
            </telerik:RadBorder>
            <telerik:RadSchedulerContent x:Name="PART_SchedulerContent"
                                         Grid.Row="1"
                                         IsClippedToBounds="True" />
            <AbsoluteLayout x:Name="PART_DialogLayout"
                            Grid.RowSpan="2"
                            InputTransparent="True" />

        </Grid>
    </ControlTemplate>

    <Style x:Key="RadSchedulerStyle_Desktop" TargetType="telerik:RadScheduler">
        <Setter Property="ControlTemplate" Value="{StaticResource RadSchedulerControlTemplate_Desktop}" />
        <Setter Property="IncreaseVisibleRangeButtonStyle" Value="{StaticResource SchedulerIncreaseVisibleRangeButtonStyle}" />
        <Setter Property="DecreaseVisibleRangeButtonStyle" Value="{StaticResource SchedulerDecreaseVisibleRangeButtonStyle}" />
        <Setter Property="EditAppointmentDialogStyle" Value="{StaticResource SchedulerEditAppointmentDialogStyle_Desktop}" />
        <Setter Property="EditRecurrenceDialogStyle" Value="{StaticResource SchedulerEditRecurrenceDialogStyle_Desktop}" />
        <Setter Property="EditRecurrenceChoiceDialogStyle" Value="{StaticResource SchedulerEditRecurrenceChoiceDialogStyle_Desktop}" />
        <Setter Property="DeleteAppointmentChoiceDialogStyle" Value="{StaticResource SchedulerDeleteAppointmentChoiceDialogStyle_Desktop}" />
        <Setter Property="DeleteRecurrenceChoiceDialogStyle" Value="{StaticResource SchedulerDeleteRecurrenceChoiceDialogStyle_Desktop}" />
    </Style>

    <Style x:Key="SchedulerCalendarStyle_Mobile" TargetType="telerik:RadCalendar">
        <Setter Property="HeightRequest" Value="308" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="HeaderBorderStyle">
            <Setter.Value>
                <Style TargetType="telerik:RadBorder">
                    <Setter Property="IsVisible" Value="False" />
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="RadSchedulerControlTemplate_Mobile">
        <Grid RowDefinitions="Auto, *">
            <telerikScheduler:SchedulerExpander x:Name="PART_HeaderExpander">
                <telerikScheduler:SchedulerExpander.Header>
                    <telerik:RadBorder Style="{TemplateBinding ActualHeaderBorderStyle}">
                        <Grid ColumnDefinitions="*, Auto, Auto">
                            <HorizontalStackLayout HorizontalOptions="Start">
                                <Label Style="{TemplateBinding ActualHeaderLabelStyle}" />
                                <Label Style="{TemplateBinding ActualHeaderIndicatorLabelStyle}" />
                            </HorizontalStackLayout>
                            <Button Grid.Column="1"
                                    Style="{TemplateBinding ActualTodayButtonStyle}"
                                    IsVisible="{TemplateBinding IsTodayButtonVisible}"
                                    Command="{TemplateBinding TodayCommand}" />
                            <telerikScheduler:SchedulerDropDownButton x:Name="PART_ViewDefinitionPicker"
                                                                      Grid.Column="2" 
                                                                      ItemStyle="{TemplateBinding ActualViewDefinitionHeaderItemStyle}"
                                                                      SelectedItemStyle="{TemplateBinding ActualActiveViewDefinitionHeaderItemStyle}" />
                        </Grid>
                    </telerik:RadBorder>
                </telerikScheduler:SchedulerExpander.Header>
                <telerikScheduler:SchedulerExpander.Content>
                    <telerik:RadCalendar x:Name="PART_HeaderCalendar"
                                         Style="{StaticResource SchedulerCalendarStyle_Mobile}"
                                         Culture="{Binding Culture, Source={RelativeSource TemplatedParent}}"
                                         DisplayDate="{Binding CurrentDate, Source={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                         SelectedDate="{Binding CurrentDate, Source={RelativeSource TemplatedParent}, Mode=TwoWay}" />
                </telerikScheduler:SchedulerExpander.Content>
            </telerikScheduler:SchedulerExpander>
            <telerik:RadSchedulerContent x:Name="PART_SchedulerContent"
                                         Grid.Row="1"
                                         IsClippedToBounds="True" />
        </Grid>
    </ControlTemplate>

    <Style x:Key="RadSchedulerStyle_Mobile" TargetType="telerik:RadScheduler">
        <Setter Property="ControlTemplate" Value="{StaticResource RadSchedulerControlTemplate_Mobile}" />
        <Setter Property="HeaderIndicatorLabelStyle" Value="{StaticResource SchedulerHeaderIndicatorLabelStyle}" />
        <Setter Property="PreviewAppointmentDialogStyle" Value="{StaticResource SchedulerPreviewAppointmentDialogStyle_Mobile}" />
        <Setter Property="EditAppointmentDialogStyle" Value="{StaticResource SchedulerEditAppointmentDialogStyle_Mobile}" />
        <Setter Property="EditRecurrenceDialogStyle" Value="{StaticResource SchedulerEditRecurrenceDialogStyle_Mobile}" />
        <Setter Property="EditRecurrenceChoiceDialogStyle" Value="{StaticResource SchedulerEditRecurrenceChoiceDialogStyle_Mobile}" />
        <Setter Property="DeleteAppointmentChoiceDialogStyle" Value="{StaticResource SchedulerDeleteAppointmentChoiceDialogStyle_Mobile}" />
        <Setter Property="DeleteRecurrenceChoiceDialogStyle" Value="{StaticResource SchedulerDeleteRecurrenceChoiceDialogStyle_Mobile}" />
    </Style>

    <Style x:Key="RadSchedulerStyle" TargetType="telerik:RadScheduler" BasedOn="{OnPlatform Android={StaticResource RadSchedulerStyle_Mobile}, iOS={StaticResource RadSchedulerStyle_Mobile}, MacCatalyst={StaticResource RadSchedulerStyle_Desktop}, WinUI={StaticResource RadSchedulerStyle_Desktop}}">
        <Setter Property="Background" Value="{DynamicResource RadAppSurfaceColor}" />
        <Setter Property="BorderColor" Value="{DynamicResource RadBorderColor}" />
        <Setter Property="HeaderBorderStyle" Value="{StaticResource SchedulerHeaderBorderStyle}" />
        <Setter Property="HeaderLabelStyle" Value="{StaticResource SchedulerHeaderLabelStyle}" />
        <Setter Property="ViewDefinitionHeaderItemStyle" Value="{StaticResource SchedulerViewDefinitionHeaderItemStyle}" />
        <Setter Property="ActiveViewDefinitionHeaderItemStyle" Value="{StaticResource SchedulerActiveViewDefinitionHeaderItemStyle}" />
        <Setter Property="TodayButtonStyle" Value="{StaticResource SchedulerTodayButtonStyle}" />
    </Style>
    <Style TargetType="telerik:RadScheduler" BasedOn="{StaticResource RadSchedulerStyle}" />

</ResourceDictionary>
